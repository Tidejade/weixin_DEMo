.container_change{
  height: 100%;
  width: 100%;
  display: block;
  padding: 0rpx 0;
  box-sizing: border-box;
  background-color: #1d1128;
}
.cloudOne{
  width: 90rpx;
  height: 60rpx;
  display: block;
  position: absolute;
  top:100rpx;
  left:730rpx;
  animation: cloudA 50s ease infinite normal;
}

.cloudTwo{
  width: 100rpx;
  height: 30rpx;
  display: block;
  position: absolute;
  top:180rpx;
  left:250rpx;
  opacity: 0;
    animation: cloudB 25s ease-out 2s infinite normal;
}
@keyframes cloudA{
  75%{opacity: 0}
  100%{left:-25rpx;opacity: 0}
}
@keyframes cloudB{
  0%{opacity: 0}
  10%{opacity: 0.8}
  75%{opacity: 0}
  100%{left:-5rpx;}
}
